<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score.GameOverFragment"
    android:background="@color/pink">

    <TextView
        android:id="@+id/gameOver"
        style="@style/FontText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/score"
        android:fontFamily="@font/imprima"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/gameOver"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/gameOver"
        app:layout_constraintTop_toBottomOf="@+id/gameOver" />

    <Button
        android:id="@+id/button"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/playAgain_button"
        app:layout_constraintEnd_toEndOf="@+id/scoreFinal"
        app:layout_constraintStart_toStartOf="@+id/scoreFinal"
        app:layout_constraintTop_toBottomOf="@+id/scoreFinal" />


</androidx.constraintlayout.widget.ConstraintLayout>
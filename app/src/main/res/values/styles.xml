<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FontText">
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/imprima</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="SkipButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CorrectButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/darker_green</item>
    </style>
</resources>